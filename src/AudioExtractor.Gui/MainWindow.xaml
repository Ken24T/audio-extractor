<Window x:Class="AudioExtractor.Gui.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Audio Extractor" Height="720" Width="980" MinHeight="600" MinWidth="840">
  <Grid Margin="16">
    <Grid.RowDefinitions>
      <RowDefinition Height="Auto" />
      <RowDefinition Height="*" />
      <RowDefinition Height="Auto" />
    </Grid.RowDefinitions>

    <TextBlock Grid.Row="0" Text="Audio Extractor" FontSize="22" FontWeight="SemiBold" />

    <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Margin="0,12,0,12">
      <StackPanel Orientation="Vertical" Margin="0,4,0,0">
        <GroupBox Header="Files" Margin="0,0,0,12">
          <Grid Margin="12">
            <Grid.RowDefinitions>
              <RowDefinition Height="Auto" />
              <RowDefinition Height="Auto" />
              <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
              <ColumnDefinition Width="Auto" />
              <ColumnDefinition Width="*" />
              <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <TextBlock Grid.Row="0" Grid.Column="0" Text="Input" Margin="0,0,12,8" VerticalAlignment="Center" />
            <TextBox Grid.Row="0" Grid.Column="1" Name="InputTextBox" Margin="0,0,12,8" />
            <Button Grid.Row="0" Grid.Column="2" Name="BrowseInputButton" Content="Browse" Width="90" Margin="0,0,0,8" Click="OnBrowseInput" />

            <TextBlock Grid.Row="1" Grid.Column="0" Text="Output" Margin="0,0,12,8" VerticalAlignment="Center" />
            <TextBox Grid.Row="1" Grid.Column="1" Name="OutputTextBox" Margin="0,0,12,8" />
            <Button Grid.Row="1" Grid.Column="2" Name="BrowseOutputButton" Content="Browse" Width="90" Margin="0,0,0,8" Click="OnBrowseOutput" />

            <TextBlock Grid.Row="2" Grid.Column="0" Text="ffmpeg" Margin="0,0,12,0" VerticalAlignment="Center" />
            <TextBox Grid.Row="2" Grid.Column="1" Name="FfmpegTextBox" Margin="0,0,12,0" />
            <Button Grid.Row="2" Grid.Column="2" Name="BrowseFfmpegButton" Content="Browse" Width="90" Click="OnBrowseFfmpeg" />
          </Grid>
        </GroupBox>

        <GroupBox Header="Time" Margin="0,0,0,12">
          <Grid Margin="12">
            <Grid.ColumnDefinitions>
              <ColumnDefinition Width="Auto" />
              <ColumnDefinition Width="*" />
              <ColumnDefinition Width="Auto" />
              <ColumnDefinition Width="*" />
              <ColumnDefinition Width="Auto" />
              <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <TextBlock Grid.Column="0" Text="Start" Margin="0,0,8,0" VerticalAlignment="Center" />
            <TextBox Grid.Column="1" Name="StartTextBox" Margin="0,0,12,0" />

            <TextBlock Grid.Column="2" Text="End" Margin="0,0,8,0" VerticalAlignment="Center" />
            <TextBox Grid.Column="3" Name="EndTextBox" Margin="0,0,12,0" />

            <TextBlock Grid.Column="4" Text="Duration" Margin="0,0,8,0" VerticalAlignment="Center" />
            <TextBox Grid.Column="5" Name="DurationTextBox" />
          </Grid>
        </GroupBox>

        <GroupBox Header="Output" Margin="0,0,0,12">
          <StackPanel Orientation="Horizontal" Margin="12">
            <CheckBox Name="ForceCheckBox" Content="Overwrite existing" Margin="0,0,16,0" />
            <CheckBox Name="AutoplayCheckBox" Content="Autoplay" Margin="0,0,16,0" />
            <CheckBox Name="VerboseCheckBox" Content="Verbose" />
          </StackPanel>
        </GroupBox>

        <GroupBox Header="Processing" Margin="0,0,0,12">
          <Grid Margin="12">
            <Grid.RowDefinitions>
              <RowDefinition Height="Auto" />
              <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
              <ColumnDefinition Width="Auto" />
              <ColumnDefinition Width="*" />
              <ColumnDefinition Width="Auto" />
              <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <CheckBox Grid.Row="0" Grid.Column="0" Name="NoTtsCheckBox" Content="No TTS" Margin="0,0,16,0" />

            <TextBlock Grid.Row="0" Grid.Column="2" Text="Sample Rate" Margin="0,0,8,0" VerticalAlignment="Center" />
            <TextBox Grid.Row="0" Grid.Column="3" Name="SampleRateTextBox" />

            <TextBlock Grid.Row="1" Grid.Column="2" Text="Channels" Margin="0,8,8,0" VerticalAlignment="Center" />
            <TextBox Grid.Row="1" Grid.Column="3" Name="ChannelsTextBox" Margin="0,8,0,0" />
          </Grid>
        </GroupBox>

        <GroupBox Header="TTS Settings" Margin="0,0,0,12">
          <Grid Margin="12">
            <Grid.ColumnDefinitions>
              <ColumnDefinition Width="Auto" />
              <ColumnDefinition Width="*" />
              <ColumnDefinition Width="Auto" />
              <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
              <RowDefinition Height="Auto" />
              <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <TextBlock Grid.Row="0" Grid.Column="0" Text="Sample Rate" Margin="0,0,8,0" VerticalAlignment="Center" />
            <TextBox Grid.Row="0" Grid.Column="1" Name="TtsSampleRateTextBox" Margin="0,0,16,0" />

            <TextBlock Grid.Row="0" Grid.Column="2" Text="Highpass Hz" Margin="0,0,8,0" VerticalAlignment="Center" />
            <TextBox Grid.Row="0" Grid.Column="3" Name="TtsHighpassTextBox" />

            <TextBlock Grid.Row="1" Grid.Column="0" Text="Lowpass Hz" Margin="0,8,8,0" VerticalAlignment="Center" />
            <TextBox Grid.Row="1" Grid.Column="1" Name="TtsLowpassTextBox" Margin="0,8,16,0" />

            <TextBlock Grid.Row="1" Grid.Column="2" Text="Target LUFS" Margin="0,8,8,0" VerticalAlignment="Center" />
            <TextBox Grid.Row="1" Grid.Column="3" Name="TargetLufsTextBox" Margin="0,8,0,0" />
          </Grid>
        </GroupBox>

        <GroupBox Header="Log">
          <TextBox Name="LogTextBox" Margin="12" Height="160" IsReadOnly="True" TextWrapping="Wrap" VerticalScrollBarVisibility="Auto" />
        </GroupBox>
      </StackPanel>
    </ScrollViewer>

    <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right">
      <Button Name="RunButton" Content="Run" Width="120" Height="32" Margin="0,0,8,0" Click="OnRun" />
      <Button Name="ClearButton" Content="Clear Log" Width="120" Height="32" Click="OnClearLog" />
    </StackPanel>
  </Grid>
</Window>
